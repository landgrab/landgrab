<% featured ||= false %>

<div class="card mb-3">
  <%= image_tag plot.hero_image_url_fallback, class: 'card-img-top img-fluid', alt: "Hero image for #{plot.title} plot" %>
  <% if featured %>
    <div class="card-header">
      <span class="badge text-bg-warning">Featured Plot</span>
    </div>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= plot.title %></h5>

    <p class="card-text">
      <% non_subscribed_tiles_count = plot.non_subscribed_tiles.size %>
      <% if non_subscribed_tiles_count.zero? %>
        There are no tiles available
      <% else %>
        <%= plot.non_subscribed_tiles.size %>
        of
        <%= plot.tiles.size %>
        tiles available
      <% end %>
    </p>
    <%= link_to 'View Plot',
                plot_path(plot),
                class: "btn btn-#{featured ? 'warning' : 'primary'} stretched-link" %>
  </div>
</div>
